@model IEnumerable<FilmSistemi.Models.Comments>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">



    <h1>Yorumlar<small></small></h1>

</div>

<div class="panel panel-default">

    <div class="panel-heading">
        <i class="fa fa-trash-o"></i>
        Film Düzenle
        <div class="panel-tools">
            <a class="btn btn-xs btn-link panel-collapse collapses" href="#">
            </a>
            <a class="btn btn-xs btn-link panel-refresh" href="#">
                <i class="fa fa-refresh"></i>
            </a>
            <a class="btn btn-xs btn-link panel-close" href="#">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>
    <div class="panel-body">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CContent)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NewUserId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movies.MName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CContent)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NewUserId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Movies.MName)
                    </td>
                    <td>
          

                        <div class="visible-md visible-lg">
                            <a href="@Url.Action("Details", "Comments", new { id = item.CommentId })" class="btn btn-xs btn-warning tooltips" data-placement="top" data-original-title="Edit"><i class="fa fa-eye"></i></a>
                            <a href="@Url.Action("Delete", "Comments", new { id = item.MovieId })" class="btn btn-xs btn-bricky tooltips" data-placement="top" data-original-title="Remove"><i class="fa fa-times fa fa-white"></i></a>
                        </div>
                    </td>
                </tr>

            }

        </table>
    </div>
</div>