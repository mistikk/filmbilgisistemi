@model List<FilmSistemi.Models.Movies>
@{
    ViewBag.Title = "Listele";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">

    <a class="btn btn-green pull-right" href="@Url.Action("FilmEkle", "Film")"><i class="fa fa-plus    fa fa-white"></i></a>
    <a class="btn btn-danger pull-right" href="@Url.Action("FilmEkle", "Film")"><i class="fa fa-reply    fa fa-white"></i></a>
    <h1>Film Listesi<small></small></h1>

</div>






<div class="panel panel-default">


    <div class="panel-heading">
        <i class="fa fa-external-link-square"></i>
        Filmler
        <div class="panel-tools">
            <a class="btn btn-xs btn-link panel-collapse collapses" href="#">
            </a>
            <a class="btn btn-xs btn-link panel-refresh" href="#">
                <i class="fa fa-refresh"></i>
            </a>
            <a class="btn btn-xs btn-link panel-close" href="#">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>
    <div class="panel-body">

        <table class="table table-hover" id="sample-table-1">
            <thead>
                <tr>
                    <th class="center">#</th>
                    <th>Resim</th>
                    <th class="hidden-xs">Film Adı</th>
                    <th>Açıklama</th>
                    <th class="hidden-xs">Çıkış Tarihi</th>
                    <th class="hidden-xs">Ülke</th>
                    <th class="hidden-xs">Yönetmen</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>

                        <td class="center">@item.MovieId</td>
                        <td class="hidden-xs">
                            @if (item.MBanner != null)
                            {
                                <img style="width:100px; height:100px;" src="data:image/png;base64,@System.Convert.ToBase64String(item.MBanner)" />
                            
                            }
                        </td>
                        <td class="col-md-1">@item.MName</td>
                        <td>@item.MDescription</td>
                        <td class="hidden-xs">@item.MReleaseDate</td>
                        <td class="hidden-xs">@item.MCountry</td>
                        <td class="hidden-xs">@item.MDirector</td>
                        <td class="center col-md-1">
                            
                            <div class="visible-md visible-lg">
                                <a href="@Url.Action("Edit", "Film", new { id = item.MovieId })" class="btn btn-xs btn-teal tooltips" data-placement="top" data-original-title="Edit"><i class="fa fa-edit"></i></a>
                            

                                <a href="@Url.Action("Delete", "Film", new { id = item.MovieId })" class="btn btn-xs btn-bricky tooltips" data-placement="top" data-original-title="Remove"><i class="fa fa-times fa fa-white"></i></a>

             
                

                            </div>

                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
