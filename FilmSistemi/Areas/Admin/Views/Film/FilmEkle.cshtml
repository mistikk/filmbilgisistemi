@model FilmSistemi.Areas.Admin.Models.FilmModel

@{
    ViewBag.Title = "FilmEkle";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <h1>Film Ekle<small></small></h1>
</div>


<!-- start: FORM WIZARD PANEL -->
<div class="panel panel-default">
    <div class="panel-heading">
        <i class="fa fa-external-link-square"></i>
        Film Ekleme Formu
        <div class="panel-tools">
            <a class="btn btn-xs btn-link panel-collapse collapses" href="#">
            </a>
            <a class="btn btn-xs btn-link panel-config" href="#panel-config" data-toggle="modal">
                <i class="fa fa-wrench"></i>
            </a>
            <a class="btn btn-xs btn-link panel-refresh" href="#">
                <i class="fa fa-refresh"></i>
            </a>
            <a class="btn btn-xs btn-link panel-expand" href="#">
                <i class="fa fa-resize-full"></i>
            </a>
            <a class="btn btn-xs btn-link panel-close" href="#">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>
    <div class="panel-body">
 @using (Html.BeginForm("FilmEkleYeni", "Film", FormMethod.Post, new { @class = "smart-wizard form-horizontal" }))
 { 


            <div id="wizard" class="swMain">


                <div id="step-1">
            
                    <div class="form-group">
                        @Html.LabelFor(m => m.Movies.MName, new { @class = "col-sm-3 control-label" })

                        <div class="col-sm-7">
                            @Html.TextBoxFor(m => m.Movies.MName, new { @class = "form-control", placeholder = "Film Adı" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Movies.MDirector, new { @class = "col-sm-3 control-label" })

                        <div class="col-sm-7">
                            @Html.TextBoxFor(m => m.Movies.MDirector, new { @class = "form-control", placeholder = "Yönetmen" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Movies.MMinute, new { @class = "col-sm-3 control-label" })

                        <div class="col-sm-7">
                            @Html.TextBoxFor(m => m.Movies.MMinute, new { @class = "form-control", placeholder = "Süre" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Movies.MCountry, new { @class = "col-sm-3 control-label" })

                        <div class="col-sm-7">
                            @Html.TextBoxFor(m => m.Movies.MCountry, new { @class = "form-control", placeholder = "Ülke" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(m =>m.Movies.MReleaseDate, new { @class = "col-sm-3 control-label" })

                        <div class="col-sm-7">
                            @Html.TextBoxFor(m => m.Movies.MReleaseDate, new { @class = "form-control datepicker", placeholder = "Tarihi" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">
                            Açıklama <span class="symbol required"></span>
                        </label>
                        <div class="col-sm-7">
                            @Html.TextAreaFor(m => m.Movies.MDescription, new { @class = "form-control", rows="10", placeholder = "Film Acıklaması" })

                        </div>
                    </div>


                    <div class="form-group">
                        <div class="col-sm-2 col-sm-offset-8">
                            <button class="btn btn-blue next-step btn-block">
                                Ekle <i class="fa fa-arrow-circle-right"></i>
                            </button>
                        </div>
                    </div>
                </div>

            </div>

        }
    </div>
</div>



