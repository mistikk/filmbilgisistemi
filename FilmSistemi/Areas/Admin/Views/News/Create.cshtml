@model FilmSistemi.Areas.Admin.Models.FilmModel

@{
    ViewBag.Title = "Haberler / Yeni";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">


    <a class="btn btn-danger pull-right" href="@Url.Action("index", "News")"><i class="fa fa-reply    fa fa-white"></i></a>
    <h1>Haber<small></small></h1>

</div>

<div class="panel panel-default">


    <div class="panel-heading">
        <i class="fa fa-external-link-square"></i>
        Haber Ekle
        <div class="panel-tools">
            <a class="btn btn-xs btn-link panel-collapse collapses" href="#">
            </a>
            <a class="btn btn-xs btn-link panel-refresh" href="#">
                <i class="fa fa-refresh"></i>
            </a>
            <a class="btn btn-xs btn-link panel-close" href="#">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>
    <div class="panel-body ">
        <div class="col-md-2"></div>

        @using (Html.BeginForm("Create", "News", FormMethod.Post, new
        {
            enctype = "multipart/form-data"
        }))
        {
            @Html.AntiForgeryToken()

            <div class="col-md-7 form-horizontal ">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.News.NTitle, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.News.NTitle, new { htmlAttributes = new { @class = "form-control", placeholder = "Haber Baslığı" } })
                        @Html.ValidationMessageFor(model => model.News.NTitle, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.News.NContent, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.News.NContent, new { @class = "form-control", rows = "10", placeholder = "Haber İçeriği" })
                        @Html.ValidationMessageFor(model => model.News.NContent, "", new { @class = "text-danger" })

                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.News.NDate, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.News.NDate, new { htmlAttributes = new { @class = "form-control form-control date-picker", placeholder = "Haber Tarihi" } })
                        @Html.ValidationMessageFor(model => model.News.NDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.NewsPicture.Picture, new { @class = "col-sm-3 control-label" })

                    <div class="col-md-10">
                        <input type="file" name="pic" class="form-control" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Ekle" class="btn btn-success" />
                    </div>
                </div>
            </div>
        }

    </div>
</div>