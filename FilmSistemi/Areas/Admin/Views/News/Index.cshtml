@model IEnumerable<FilmSistemi.Models.News>

@{
    ViewBag.Title = "Haber";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">

    <a class="btn btn-green pull-right" href="@Url.Action("Create", "News")"><i class="fa fa-plus    fa fa-white"></i></a>

    <h1>Haber Listesi<small></small></h1>

</div>

<div class="panel panel-default">


    <div class="panel-heading">
        <i class="fa fa-external-link-square"></i>
        Haberler
        <div class="panel-tools">
            <a class="btn btn-xs btn-link panel-collapse collapses" href="#">
            </a>
            <a class="btn btn-xs btn-link panel-refresh" href="#">
                <i class="fa fa-refresh"></i>
            </a>
            <a class="btn btn-xs btn-link panel-close" href="#">
                <i class="fa fa-times"></i>
            </a>
        </div>
    </div>
    <div class="panel-body">

        <table class="table table-hover" id="sample-table-1">
            <thead>
                <tr>
                    <th>
                        Başlık
                    </th>
                    <th>
                        İçerik
                    </th>
                    <th>
                        Tarih
                    </th>
                    <th></th>
                </tr>
            </thead>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NContent)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NDate)
                        </td>
                        <td>


                            <a href="@Url.Action("Details", "News", new { id = item.NewsId })" class="btn btn-xs btn-success tooltips" data-placement="top" data-original-title="Remove"><i class="fa fa-times fa fa-eye"></i></a>


                            <a href="@Url.Action("Edit", "News", new { id = item.NewsId })" class="btn btn-xs btn-teal tooltips" data-placement="top" data-original-title="Edit"><i class="fa fa-edit"></i></a>


                            <a href="@Url.Action("Delete", "News", new { id = item.NewsId })" class="btn btn-xs btn-bricky tooltips" data-placement="top" data-original-title="Remove"><i class="fa fa-times fa fa-white"></i></a>


                        </td>
                    </tr>
                }

</table>
    </div>
</div>