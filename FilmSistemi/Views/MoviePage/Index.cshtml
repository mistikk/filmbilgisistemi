@model FilmSistemi.Models.MoviePageModel
@using Microsoft.AspNet.Identity;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<body >
    <!-- Main content -->
    <section class="container" ng-controller="MoviepageController">
        <div class="col-sm-12">
            <div class="movie">
                <h2 class="page-heading">@Model.Movies.MName</h2>
                
                <div class="movie__info">
                    <div class="col-sm-4 col-md-3 movie-mobile">
                        <div class="movie__images">
                            <span class="movie__rating">@Model.Star</span>
                            @if (Model.Movies.MBanner == null)
                            {
                                <img alt='' src="http://placehold.it/526x773">
                            }
                            else
                            {
                                <img alt='' src="data:image/png;base64,@System.Convert.ToBase64String(Model.Movies.MBanner)">
                            }
                        </div>
                        <div  class="movie__rate">Your vote: <div id='score' ng-click="StarClick(@Model.Movies.MovieId);" class="score"></div></div>
                    </div>

                    <div class="col-sm-8 col-md-9">
                        <p class="movie__time">@Model.Movies.MMinute min</p>
                        <p class="movie__option"><strong>Country: </strong><a href="#">@Model.Movies.MCountry</a></p>
                        <p class="movie__option"><strong>Year: </strong><a href="#">@String.Format("{0:yyyy}", @Model.Movies.MReleaseDate)</a></p>
                        <p class="movie__option">
                            <strong>Category: </strong>
                            @foreach (var item in Model.Categories)
                            {
                                <a href="#">@item.CName</a><span>,</span>
                            }
                        </p>
                        <p class="movie__option"><strong>Release date: </strong>@String.Format("{0:d}", @Model.Movies.MReleaseDate)</p>
                        <p class="movie__option"><strong>Director: </strong><a href="#">@Model.Movies.MDirector</a></p>
                        <p class="movie__option">
                            <strong>Actors: </strong>
                            @foreach (var item in Model.Actors)
                            {
                                <a href="#">@item.ActorName</a><span>,</span>
                            }
                        </p>

                        <a href="#" class="comment-link">Comments:  @Model.Comments.Count</a>

                        <div class="share">
                            <span class="share__marker">Share: </span>
                            <div class="addthis_toolbox addthis_default_style ">
                                <a class="addthis_button_facebook_like" fb:like:layout="button_count"></a>
                                <a class="addthis_button_tweet"></a>
                                <a class="addthis_button_google_plusone" g:plusone:size="medium"></a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="clearfix"></div>

                <h2 class="page-heading">The plot</h2>

                <p class="movie__describe">@Model.Movies.MDescription</p>

                <h2 class="page-heading">photos &amp; videos</h2>

                <div class="movie__media">
                    <div class="movie__media-switch">
                        <a href="#" class="watchlist list--photo" data-filter='media-photo'>234 photos</a>
                        <a href="#" class="watchlist list--video" data-filter='media-video'>@Model.Videos.Count videos</a>
                    </div>

                    <div class="swiper-container">
                        <div class="swiper-wrapper">

                            <!--Third Slide-->
                            <div class="swiper-slide media-photo">
                                <a href='http://placehold.it/2100x1250' class="movie__media-item">
                                    <img alt='' src="http://placehold.it/400x240">
                                </a>
                            </div>

                            <!--Four Slide-->
                            <div class="swiper-slide media-photo">
                                <a href='http://placehold.it/2100x1250' class="movie__media-item">
                                    <img alt='' src="http://placehold.it/400x240">
                                </a>
                            </div>

                            <!--Slide-->
                            <div class="swiper-slide media-photo">
                                <a href='http://placehold.it/2100x1250' class="movie__media-item">
                                    <img alt='' src="http://placehold.it/400x240">
                                </a>
                            </div>

                            <!--Slide-->
                            <div class="swiper-slide media-photo">
                                <a href='http://placehold.it/2100x1250' class="movie__media-item">
                                    <img alt='' src="http://placehold.it/400x240">
                                </a>
                            </div>

                            <!--First Slide-->
                            @foreach (var item in Model.Videos)
                            {
                                <div class="swiper-slide media-video">
                                    <a href='@item.VLink' class="movie__media-item ">
                                        <img alt='' src="http://placehold.it/400x240">
                                    </a>
                                </div>
                            }


                            <!--Slide-->
                            <div class="swiper-slide media-photo">
                                <a href='http://placehold.it/2100x1250' class="movie__media-item">
                                    <img alt='' src="http://placehold.it/400x240">
                                </a>
                            </div>

                            <!--Slide-->
                            <div class="swiper-slide media-photo">
                                <a href='http://placehold.it/2100x1250' class="movie__media-item">
                                    <img alt='' src="http://placehold.it/400x240">
                                </a>
                            </div>

                        </div>
                    </div>

                </div>

            </div>

            <div class="choose-container">


                <h2 class="page-heading">comments (@Model.Comments.Count)</h2>

                <div class="comment-wrapper">
                    <form id="comment-form" class="comment-form" method='post'>
                        <textarea ng-model="commentContent" class="comment-form__text" placeholder='Add you comment here'></textarea>
                        <label class="comment-form__info">250 characters left</label>
                        <button ng-click="SaveComment(commentContent,@Model.Movies.MovieId);" type='submit' class="btn btn-md btn--danger comment-form__btn">add comment</button>
                    </form>

                    <div class="comment-sets">

                        @foreach (var item in Model.Comments)
                        {
                            <div class="comment">
                                <div class="comment__images">
                                    <img alt='' src="http://placehold.it/50x50">
                                </div>
                                <a href='#' class="comment__author">@item.UserName</a>
                                <p class="comment__date">@String.Format("{0:d}", @item.CDate)</p>
                                <p class="comment__message">@item.CContent</p>
                            </div>
                        }
